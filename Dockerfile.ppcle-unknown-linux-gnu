FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/powerpcle-unknown-linux-gnu.config /ct-ng/
COPY gcc.sh /ct-ng/
RUN ARCH=powerpcle-unknown-linux-gnu /ct-ng/gcc.sh

# Remove GCC build scripts and config.
RUN rm -rf /ct-ng/

# Add toolchains
COPY cmake/ppcle-unknown-linux-gnu.cmake /toolchains
COPY cmake/ppcle-unknown-linux-gnu.cmake /toolchains/ppcle.cmake
COPY env/ppcle-unknown-linux-gnu /toolchains/env

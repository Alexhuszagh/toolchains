FROM ahuszagh/cross:base

RUN DEBIAN_FRONTEND="noninteractive" apt-get install --assume-yes --no-install-recommends \
    g++-10-arm-linux-gnueabihf \
    libc6-armel-armhf-cross

# Add symlinks
COPY symlink/exec.sh /
COPY symlink/armelhf-unknown-linux-gnueabi.sh /
RUN /armelhf-unknown-linux-gnueabi.sh
RUN rm /exec.sh /armelhf-unknown-linux-gnueabi.sh

# Add toolchains
COPY cmake/armelhf-unknown-linux-gnueabi.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

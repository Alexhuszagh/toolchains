FROM ahuszagh/cross:base

RUN DEBIAN_FRONTEND="noninteractive" apt-get install --assume-yes --no-install-recommends \
    g++-10-mipsisa64r6el-linux-gnuabi64 \
    libc6-mips64r6el-cross

# Add symlinks
COPY symlink/exec.sh /
COPY symlink/mips64r6el-unknown-linux-gnu.sh /
RUN /mips64r6el-unknown-linux-gnu.sh
RUN rm /exec.sh /mips64r6el-unknown-linux-gnu.sh

# Add toolchains
COPY cmake/mips64r6el-unknown-linux-gnu.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/ppc64le-unknown-elf.config /ct-ng/
COPY docker/gcc.sh /ct-ng/
RUN ARCH=ppc64le-unknown-elf /ct-ng/gcc.sh

# Remove GCC build scripts and config.
RUN rm -rf /ct-ng/

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/ppc64le-unknown-elf.sh /
RUN /ppc64le-unknown-elf.sh
RUN rm /shortcut.sh /ppc64le-unknown-elf.sh

# Add toolchains
COPY cmake/ppc64le-unknown-elf.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

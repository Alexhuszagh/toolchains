FROM ahuszagh/cross:base

# Build GCC
COPY docker/android.sh /
RUN /android.sh
RUN rm /android.sh

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/aarch64-unknown-linux-android.sh /
RUN /aarch64-unknown-linux-android.sh
RUN rm /shortcut.sh /aarch64-unknown-linux-android.sh

# Add toolchains
COPY cmake/aarch64-unknown-linux-android.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

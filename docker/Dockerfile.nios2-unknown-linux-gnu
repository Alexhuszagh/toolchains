FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/nios2-unknown-linux-gnu.config /ct-ng/
COPY docker/gcc.sh /ct-ng/
RUN ARCH=nios2-unknown-linux-gnu /ct-ng/gcc.sh
RUN rm -rf /ct-ng/

# Add Qemu binaries.
COPY docker/qemu-apt.sh /
RUN ARCH=nios2 /qemu-apt.sh
RUN rm /qemu-apt.sh

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/nios2-unknown-linux-gnu.sh /
RUN /nios2-unknown-linux-gnu.sh
RUN rm /shortcut.sh /nios2-unknown-linux-gnu.sh

# Add toolchains
COPY cmake/nios2-unknown-linux-gnu.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

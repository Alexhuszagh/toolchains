FROM ahuszagh/cross:base

# Install build packages

RUN apt-get update
RUN DEBIAN_FRONTEND="noninteractive" apt-get install --assume-yes --no-install-recommends \
    g++-10-i686-linux-gnu \
    libc6-i386-cross

# Add Qemu binaries.
COPY docker/qemu-apt.sh /
RUN ARCH=i386 /qemu-apt.sh
RUN rm /qemu-apt.sh

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/i686-unknown-linux-gnu.sh /
RUN /i686-unknown-linux-gnu.sh
RUN rm /shortcut.sh /i686-unknown-linux-gnu.sh

# Add toolchains
COPY cmake/i686-unknown-linux-gnu.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

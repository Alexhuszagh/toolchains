FROM ahuszagh/cross:base

RUN DEBIAN_FRONTEND="noninteractive" apt-get install --assume-yes --no-install-recommends \
    g++-10-sh4-linux-gnu \
    libc6-sh4-cross

# Add Qemu binaries.
COPY docker/qemu-apt.sh /
RUN ARCH=sh4 /qemu-apt.sh
RUN rm /qemu-apt.sh

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/sh4-unknown-linux-gnu.sh /
RUN /sh4-unknown-linux-gnu.sh
RUN rm /shortcut.sh /sh4-unknown-linux-gnu.sh

# Add toolchains
COPY cmake/sh4-unknown-linux-gnu.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

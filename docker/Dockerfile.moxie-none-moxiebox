FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/moxie-none-moxiebox.config /ct-ng/
COPY docker/gcc.sh /ct-ng/
RUN ARCH=moxie-none-moxiebox /ct-ng/gcc.sh
RUN rm -rf /ct-ng/

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/moxie-none-moxiebox.sh /
RUN /moxie-none-moxiebox.sh
RUN rm /shortcut.sh /moxie-none-moxiebox.sh

# Add toolchains
COPY cmake/moxie-none-moxiebox.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

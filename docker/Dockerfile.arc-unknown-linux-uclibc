FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/arc-unknown-linux-uclibc.config /ct-ng/
COPY docker/gcc.sh /ct-ng/
RUN ARCH=arc-unknown-linux-uclibc /ct-ng/gcc.sh

# Remove GCC build scripts and config.
RUN rm -rf /ct-ng/

# Add symlinks
COPY symlink/shortcut.sh /
COPY symlink/arc-unknown-linux-uclibc.sh /
RUN /arc-unknown-linux-uclibc.sh
RUN rm /shortcut.sh /arc-unknown-linux-uclibc.sh

# Add toolchains
COPY cmake/arc-unknown-linux-uclibc.cmake /toolchains/toolchain.cmake
COPY cmake/shared.cmake /toolchains/
COPY cmake/static.cmake /toolchains/
COPY env/shared /env/
COPY env/static /env/

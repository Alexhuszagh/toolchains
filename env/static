# Sources the aliases and removes any duplicate shared/static flags.

scriptdir=`realpath $(dirname "$BASH_SOURCE")`
source "$scriptdir/base"

# Compiler toolchain with static linking.
c_flags="${CFLAGS//-fPIC}"
cxx_flags="${CXXFLAGS//-fPIC}"
ld_flags="${LDFLAGS//-static}"
ld_flags="${ld_flags//-shared}"
export CFLAGS="$c_flags"
export CXXFLAGS="$cxx_flags"
export LDFLAGS="$ld_flags -static"

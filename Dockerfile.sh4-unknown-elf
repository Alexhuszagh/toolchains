FROM ahuszagh/cross:base

# Build GCC
COPY ct-ng/sh-unknown-elf.config /ct-ng/
COPY gcc.sh /ct-ng/
RUN ARCH=sh-unknown-elf /ct-ng/gcc.sh

# Remove GCC build scripts and config.
RUN rm -rf /ct-ng/

# Add toolchains
COPY cmake/sh4-unknown-elf.cmake /toolchains
COPY cmake/sh4-unknown-elf.cmake /toolchains/sh4.cmake
COPY env/sh-unknown-elf /toolchains/sh-env
COPY env/sh4-unknown-elf /toolchains/env
